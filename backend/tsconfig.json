{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2020"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
